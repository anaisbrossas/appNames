<html>
<head>
  <title>Add Names</title>
  <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script src="/scripts/angularApp.js"></script>
  <style type="text/css">
    .glyphicon-thumbs-up {
      cursor: pointer;
    }
    .name-list{
      max-height: 450px;
      overflow: scroll;
    }
    .name-list li.well{
      margin-bottom: 4px;
    }
    .add-button{
      position: absolute;
      right: 22px;
      padding-top: 8px;
    }
  </style>
</head>
<body ng-app="appNames" ng-controller="MainCtrl">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 col-sm-12">
        <ui-view></ui-view>
      </div>
    </div>

    <script type="text/ng-template" id="/home.html">

      <div class="page-header">
        <h1>Add Names !</h1>
      </div>

      <!-- Displays Errors -->
      <div class="alert alert-danger" role="alert" ng-show="errorMessage != null">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        {{errorMessage}}
      </div>
      <!-- End displays errors--> 
      
      <div class="row">
        <div class="col-sm-12">
          <ul class="list-unstyled name-list">
            <li ng-repeat="post in posts" class="well well-sm">
              <span>{{post.name}}</span>
              <a href="#" title="Delete name" class="pull-right btn btn-sm btn-link delete-link" ng-click="delete(post)">
                <span class="glyphicon glyphicon-minus-sign"></span>
              </a>
            </li>
          </ul>
        </div>
      </div>


      <form ng-submit="addPost()" name ="addNameForm" class="form-horizontal">
        <div class="form-group row">
          <label for="name_field" class="sr-only">Name</label>

          <div class="col-xs-12">
            <input type="text" id="name_field" class="form-control" placeholder="Name" ng-model="name" name="name" ng-pattern="namePattern">
          </div>

            <button type="submit" class="btn btn-link add-button"  aria-label="Add">
              <span class="glyphicon glyphicon-plus-sign"></span>
            </button>

        </div>
      </form>

    </script>
  </div>

</body>
</html>
