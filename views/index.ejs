<html>
<head>
  <title>Add Names</title>
  <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script src="/javascripts/angularApp.js"></script>
  <style> .glyphicon-thumbs-up { cursor:pointer } </style>
</head>
<body ng-app="workCo" ng-controller="MainCtrl">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <ui-view></ui-view>

      <div class="page-header">
        <h1>Add Names !</h1>
      </div>
        
        <!-- Displays Errors -->
        <div class="alert alert-danger" role="alert" ng-show="errorMessage!=null">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only">Error:</span>
          {{errorMessage}}
        </div>
        <!-- End of Displays Errors block -->
        <div style="max-height:450px;overflow:scroll;">
          <div ng-repeat="post in posts">
              <button type="button" class="btn btn-default btn-lg btn-primary" style="width:80%;" ng-click="delete(post)">
                  <span style="float:left;">{{post.name}}</span><span class="glyphicon glyphicon-minus-sign" style="float:right;" aria-hidden="true"></span> 
              </button>
          </div>
        </div>
        <form ng-submit="addPost()"
        style="margin-top:30px;"
              name ="addNameForm">
            <div class="row">
                <div class="col-md-10">
                    <input type="text" class="form-control"
                        placeholder="Name" ng-model="name"
                        name="name" ng-pattern="namePattern">
                    </input>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary glyphicon glyphicon-plus-sign">
                    </button>
                </div>
            </div>
        </form> 
    </div>
</div>
<script type="text/ng-template" id="/home.html">
</script>
</body>
</html>